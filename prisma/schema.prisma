generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Stack {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  icon  String
  color String
  order Int?   @default(0)
}

model Social {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  icon     String
  color    String
  username String?
  url      String
  order    Int?    @default(0)
}

model Image {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  url   String
  order Int?   @default(0)
}
